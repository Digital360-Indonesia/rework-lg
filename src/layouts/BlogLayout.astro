              </svg>
            </a>
            <button
              onclick="navigator.clipboard.writeText(window.location.href)"
              class="w-10 h-10 rounded-full bg-gray-100 hover:bg-primary hover:text-white text-gray-600 flex items-center justify-center transition-all hover:scale-110"
              aria-label="Copy link"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
          </div>

          <!-- Main Content -->
          <div class="blog-post-content">
            <slot />
          </div>

          <!-- Mobile Share Buttons -->
          <div class="lg:hidden mt-12 pt-8 border-t border-gray-200">
            <h3 class="text-lg font-semibold mb-4">Bagikan artikel ini:</h3>
            <div class="flex flex-wrap gap-3">
              <a
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-primary hover:text-white text-gray-700 rounded-full transition-all"
                aria-label="Share on Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                Facebook
              </a>
              <a
                href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.toString())}&text=${encodeURIComponent(title)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-primary hover:text-white text-gray-700 rounded-full transition-all"
                aria-label="Share on Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
                Twitter
              </a>
              <a
                href={`https://wa.me/?text=${encodeURIComponent(title + ' ' + Astro.url.toString())}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-green-500 hover:text-white text-gray-700 rounded-full transition-all"
                aria-label="Share on WhatsApp"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <section class="cta-section bg-gradient-to-r from-primary to-primary-dark py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
          Butuh Jaket Custom untuk Kelas atau Komunitas?
        </h2>
        <p class="text-white/90 mb-8 max-w-2xl mx-auto">
          Konsultasikan kebutuhan jaket custom Anda dengan tim Level Garment. Dapatkan penawaran terbaik sekarang!
        </p>
        <a
          href="https://wa.me/6285183091599?text=Hai%20kak!%20Saya%20tertarik%20buat%20pesan%20jaket%20custom."
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary font-bold rounded-full hover:bg-gray-100 transition-all hover:scale-105 shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Chat WhatsApp
        </a>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  /* Hero Section */
  .blog-hero {
    min-height: 60vh;
  }

  /* Blog Post Content Styling */
  .blog-post-content {
    color: #374151;
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .blog-post-content :where(h2):not(:where([class~="not-prose"] *)) {
    color: #111827;
    font-weight: 700;
    font-size: 1.875em;
    margin-top: 2.5em;
    margin-bottom: 1em;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid #AF7AD5;
    line-height: 1.3;
  }

  .blog-post-content :where(h3):not(:where([class~="not-prose"] *)) {
    color: #111827;
    font-weight: 600;
    font-size: 1.5em;
    margin-top: 2em;
    margin-bottom: 0.75em;
    line-height: 1.4;
  }

  .blog-post-content :where(h4):not(:where([class~="not-prose"] *)) {
    color: #111827;
    font-weight: 600;
    font-size: 1.25em;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
  }

  .blog-post-content :where(p):not(:where([class~="not-prose"] *)) {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .blog-post-content :where(img):not(:where([class~="not-prose"] *)) {
    margin-top: 2em;
    margin-bottom: 2em;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 100%;
    height: auto;
  }

  .blog-post-content :where(ul):not(:where([class~="not-prose"] *)) {
    list-style-type: disc;
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.75em;
  }

  .blog-post-content :where(ol):not(:where([class~="not-prose"] *)) {
    list-style-type: decimal;
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.75em;
  }

  .blog-post-content :where(li):not(:where([class~="not-prose"] *)) {
    margin-top: 0.75em;
    margin-bottom: 0.75em;
  }

  .blog-post-content :where(blockquote):not(:where([class~="not-prose"] *)) {
    border-left: 4px solid #AF7AD5;
    padding: 1.25rem;
    margin: 2em 0;
    color: #6b7280;
    font-style: italic;
    background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%);
    border-radius: 0.75rem;
    font-size: 1.1em;
  }

  .blog-post-content :where(strong):not(:where([class~="not-prose"] *)) {
    font-weight: 700;
    color: #AF7AD5;
  }

  .blog-post-content :where(a):not(:where([class~="not-prose"] *)) {
    color: #AF7AD5;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .blog-post-content :where(a):not(:where([class~="not-prose"] *)):hover {
    color: #9A66C2;
  }

  /* Animation for hero content */
  .blog-hero h1 {
    animation: fadeInUp 0.8s ease-out;
  }

  .blog-hero .breadcrumb,
  .blog-hero .category-badge,
  .blog-hero .meta-info {
    animation: fadeInUp 0.8s ease-out;
    animation-fill-mode: both;
  }

  .blog-hero .breadcrumb {
    animation-delay: 0.1s;
  }

  .blog-hero .category-badge {
    animation-delay: 0.2s;
  }

  .blog-hero .meta-info {
    animation-delay: 0.3s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-hero {
      min-height: 50vh;
    }

    .blog-post-content {
      font-size: 1rem;
    }

    .blog-post-content :where(h2):not(:where([class~="not-prose"] *)) {
      font-size: 1.5em;
    }

    .blog-post-content :where(h3):not(:where([class~="not-prose"] *)) {
      font-size: 1.25em;
    }
  }
</style>

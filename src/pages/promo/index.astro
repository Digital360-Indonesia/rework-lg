---
/**
 * Promo Page - Level Garment
 *
 * Displays current promotional offers and deals
 */
import PageLayout from '../../layouts/PageLayout.astro';
import siteConfig from '../../data/site-config.json';

// Promo data - update this array with current promos
const promos = [
  {
    id: 'grand-opening',
    title: 'Grand Opening Promo',
    description: 'Dapatkan penawaran spesial untuk pemesanan pertama Anda! Nikmati diskon menarik untuk berbagai produk konveksi.',
    validUntil: 'Juli 2026', // Update with current date
    terms: ['Minimal Order 24 Pcs', 'Berlaku untuk semua jenis produk'],
    image: '/assets/images/promo-grand-opening.jpg', // Update with actual image path
    whatsappMessage: 'Saya mau promo Grand Opening',
    badge: 'Terbatas'
  },
  {
    id: 'rejeki-anak-baru',
    title: 'Rejeki Anak Baru',
    description: 'Promo spesial untuk kelahiran anak baru. Dapatkan cashback menarik untuk pemesanan jaket kelas atau angkatan.',
    validUntil: 'Juli 2026', // Update with current date
    terms: ['Minimal Order 24 Pcs', 'Wajib melampirkan bukti kelahiran'],
    image: '/assets/images/promo-rejeki-anak-baru.jpg', // Update with actual image path
    whatsappMessage: 'Saya mau promo Rejeki Anak Baru',
    badge: 'Populer'
  }
];

const globalTerms = [
  'Promo tidak dapat digabungkan dengan penawaran lain',
  'Harga dan ketentuan dapat berubah sewaktu-waktu',
  'Hubungi kami untuk informasi lebih lanjut'
];

const whatsappBaseUrl = siteConfig.contact.whatsappUrl;
---

<PageLayout
  title="Promo - Level Garment"
  description="Dapatkan promo spesial dari Level Garment untuk pemesanan jersey, jaket, dan kaos custom!"
  showHero={true}
  heroTitle="Promo Spesial"
  heroSubtitle="Hemat lebih banyak dengan promo eksklusif kami"
>
  <div class="promo-page">
    <!-- Active Promos -->
    <section class="active-promos section">
      <div class="container">
        <div class="section-title text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Promo Aktif</h2>
          <p class="text-lg text-gray-600">Dapatkan penawaran terbaik untuk pemesanan sekarang!</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {promos.map(promo => (
            <div class="promo-card card overflow-hidden">
              <!-- Promo Image -->
              <div class="promo-image aspect-video bg-gradient-to-br from-primary to-secondary relative overflow-hidden">
                {promo.image ? (
                  <img
                    src={promo.image}
                    alt={promo.title}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-white">
                    <span class="text-2xl font-bold">{promo.title}</span>
                  </div>
                )}
                {promo.badge && (
                  <span class="absolute top-4 right-4 bg-accent text-gray-900 px-4 py-2 rounded-full font-bold text-sm">
                    {promo.badge}
                  </span>
                )}
              </div>

              <!-- Promo Content -->
              <div class="p-6">
                <!-- Validity -->
                <div class="flex items-center gap-2 mb-4">
                  <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-sm text-green-600 font-semibold">Promo Aktif</span>
                  <span class="text-sm text-gray-500">â€¢ Berlaku hingga {promo.validUntil}</span>
                </div>

                <!-- Title & Description -->
                <h3 class="text-2xl font-bold mb-3">{promo.title}</h3>
                <p class="text-gray-600 mb-4">{promo.description}</p>

                <!-- Terms -->
                {promo.terms.length > 0 && (
                  <div class="mb-6">
                    <p class="text-sm font-semibold text-gray-700 mb-2">Syarat:</p>
                    <ul class="text-sm text-gray-600 space-y-1">
                      {promo.terms.map(term => (
                        <li class="flex items-start gap-2">
                          <svg class="w-4 h-4 text-primary mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                          <span>{term}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}

                <!-- CTA Button -->
                <a
                  href={`${whatsappBaseUrl}?text=${encodeURIComponent(promo.whatsappMessage)}`}
                  class="btn btn-whatsapp w-full justify-center"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  Klaim Promo via WhatsApp
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Global Terms -->
    <section class="terms section bg-gray-50">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl font-bold mb-6 text-center">Syarat & Ketentuan Umum</h2>
          <ul class="space-y-3 text-gray-600">
            {globalTerms.map(term => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-primary mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>{term}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-accent">
      <div class="container text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Ada Pertanyaan Tentang Promo?
        </h2>
        <p class="text-xl text-gray-800 mb-8">
          Hubungi kami untuk info promo terbaru!
        </p>
        <a
          href={`${whatsappBaseUrl}?text=${encodeURIComponent('Hai kak! Ada promo apa bulan ini?')}`}
          class="btn btn-secondary inline-flex"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Tanya Promo Terbaru
        </a>
      </div>
    </section>
  </div>
</PageLayout>

<style>
  .promo-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .promo-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .promo-image {
    position: relative;
  }

  .promo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

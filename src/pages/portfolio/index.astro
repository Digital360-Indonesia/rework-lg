---
/**
 * Portfolio Page - Level Garment
 *
 * Portfolio showcase with compact masonry gallery
 *
 * @version 1.0.0
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import portfolioData from '../../data/portfolio.json';
import siteConfig from '../../data/site-config.json';

// Page metadata
const title = 'Portfolio - Level Garment';
const description = 'Lihat portfolio karya kami yang telah melayani berbagai kampus, sekolah, dan komunitas di seluruh Indonesia.';
const image = '/assets/images/og-image.png';

// Extract categories and items
const categories = portfolioData.categories;
const items = portfolioData.items;
---

<BaseLayout title={title} description={description} image={image}>
  <!-- Hero Section with Primary Color -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-secondary py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        Portfolio Kami
      </h1>
      <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto">
        Karya terbaik yang telah kami kerjakan untuk berbagai klien di seluruh Indonesia
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        {categories.map((cat) => (
          <button
            data-category={cat.slug}
            class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all duration-300 bg-white/10 text-white border-2 border-white/30 hover:bg-white hover:text-primary"
          >
            {cat.name}
          </button>
        ))}
        <button
          data-category="all"
          class="category-filter-btn px-6 py-2 rounded-full font-medium transition-all duration-300 bg-white text-primary shadow-lg"
        >
          Semua
        </button>
      </div>
    </div>
  </section>

  <!-- Portfolio Gallery - Compact Masonry Grid -->
  <section class="py-12 md:py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="portfolio-masonry grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {items.map((item, index) => (
          <a
            href={`/portfolio/${item.slug}/`}
            data-category={item.category}
            class="portfolio-item group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 bg-white"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Image Container -->
            <div class="relative aspect-[4/5] overflow-hidden bg-gray-100">
              <img
                src={item.image}
                alt={item.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
                width="400"
                height="500"
              />
              <!-- Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

              <!-- Content on Hover -->
              <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                <span class="inline-block px-3 py-1 bg-primary text-white text-xs font-semibold rounded-full mb-2">
                  {categories.find(c => c.id === item.category)?.name || item.category}
                </span>
                <h3 class="text-white font-bold text-sm leading-tight line-clamp-2">
                  {item.name}
                </h3>
              </div>

              <!-- Quick View Badge -->
              <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="inline-flex items-center justify-center w-10 h-10 bg-white rounded-full shadow-lg">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </span>
              </div>
            </div>

            <!-- Title Below (Always Visible) -->
            <div class="p-3">
              <h3 class="font-semibold text-gray-800 text-sm truncate group-hover:text-primary transition-colors">
                {item.name}
              </h3>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">500+</div>
          <div class="text-gray-600">Proyek Selesai</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">200+</div>
          <div class="text-gray-600">Klien Puas</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">50+</div>
          <div class="text-gray-600">Kampus & Sekolah</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-primary mb-2">100%</div>
          <div class="text-gray-600">Kualitas Terjamin</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-secondary to-primary-dark py-16 md:py-20">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ingin Hasil Seperti Ini?
      </h2>
      <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
        Konsultasikan kebutuhan Anda sekarang. Gratis desain dan penawaran terbaik!
      </p>
      <a
        href={`${siteConfig.contact.whatsappUrl}?text=${encodeURIComponent('Hai kak! Saya tertarik buat jaket/seragam seperti di portfolio kamu. Bisa konsultasi?')}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 bg-white text-primary font-bold rounded-full hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
      >
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        Konsultasi Gratis
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Portfolio Masonry Grid */
  .portfolio-masonry {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .portfolio-masonry {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .portfolio-masonry {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }
  }

  /* Portfolio Item Animation */
  .portfolio-item {
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Category filtering
  const filterButtons = document.querySelectorAll('.category-filter-btn');
  const portfolioItems = document.querySelectorAll('.portfolio-item');

  filterButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');

      // Update active state
      filterButtons.forEach((btn) => {
        if (btn.getAttribute('data-category') === category) {
          btn.classList.add('bg-white', 'text-primary', 'shadow-lg');
          btn.classList.remove('bg-white/10', 'text-white', 'border-2', 'border-white/30');
        } else {
          btn.classList.remove('bg-white', 'text-primary', 'shadow-lg');
          btn.classList.add('bg-white/10', 'text-white', 'border-2', 'border-white/30');
        }
      });

      // Filter items
      portfolioItems.forEach((item) => {
        if (category === 'all') {
          item.style.display = 'block';
          item.style.animation = 'fadeInUp 0.3s ease forwards';
        } else {
          const itemCategory = item.getAttribute('data-category');
          if (itemCategory === category) {
            item.style.display = 'block';
            item.style.animation = 'fadeInUp 0.3s ease forwards';
          } else {
            item.style.display = 'none';
          }
        }
      });
    });
  });
</script>

---
/**
 * Katalog Jersey Baseball Page - Level Garment
 *
 * Displays jersey baseball catalog (PDF viewer)
 */
import PageLayout from '../../layouts/PageLayout.astro';
import siteConfig from '../../data/site-config.json';

const catalogPdf = '/assets/catalog/Katalog-Jersey-Level.pdf'; // Update with actual PDF path
const whatsappMessage = 'Hai kak! Saya ingin konsultasi tentang katalog jersey baseball.';
const whatsappUrl = `${siteConfig.contact.whatsappUrl}?text=${encodeURIComponent(whatsappMessage)}`;

// Jersey features (can be extracted from PDF or added manually)
const features = [
  {
    title: 'Bahan Premium',
    description: 'Menggunakan bahan berkualitas tinggi yang nyaman dipakai dan tahan lama',
    icon: 'fabric'
  },
  {
    title: 'Desain Custom',
    description: 'Bebas tentukan desain sesuai keinginan tim komunitas Anda',
    icon: 'design'
  },
  {
    title: 'Sablon & Bordir',
    description: 'Teknik sablon dan bordir berkualitas untuk hasil yang tajam dan rapi',
    icon: 'print'
  },
  {
    title: 'Warna Variatif',
    description: 'Tersedia berbagai pilihan warna yang bisa disesuaikan dengan identitas tim',
    icon: 'color'
  }
];

// Available jersey types (from catalog)
const jerseyTypes = [
  {
    name: 'Jersey Baseball Basic',
    description: 'Desain klasik dengan kancing di bagian depan, cocok untuk tim baseball dan komunitas'
  },
  {
    name: 'Jersey Baseball Full Print',
    description: 'Desain modern dengan printing full body, lebih bebas berkreasi dengan desain tim'
  },
  {
    name: 'Jersey Basketball',
    description: 'Desain khusus untuk basket dengan bahan yang breathable dan elastis'
  }
];
---

<PageLayout
  title="Katalog Jersey Baseball - Level Garment"
  description="Lihat katalog lengkap jersey baseball custom dari Level Garment. Kualitas premium, harga terjangkau."
  showHero={true}
  heroTitle="Katalog Jersey Baseball"
  heroSubtitle="Jersey baseball custom kualitas premium untuk tim dan komunitas Anda"
>
  <div class="katalog-page">
    <!-- Catalog Introduction -->
    <section class="intro section">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-4">Katalog Jersey Baseball</h2>
          <p class="text-lg text-gray-600 mb-6">
            Jelajahi katalog lengkap jersey baseball custom dari Level Garment. Kami menyediakan berbagai pilihan jersey dengan kualitas premium dan harga terjangkau.
          </p>
          <p class="text-gray-600">
            Jangan ragu hubungi kami untuk konsultasi untuk jersey kelas atau angkatan yang akan Anda buat.
          </p>
        </div>
      </div>
    </section>

    <!-- PDF Catalog Viewer -->
    <section class="catalog-viewer section bg-gray-50">
      <div class="container">
        <div class="catalog-embed">
          <div class="bg-white rounded-xl shadow-lg p-4">
            <div class="aspect-[8.5/11] bg-gray-100 rounded-lg flex items-center justify-center">
              <!-- PDF Embed -->
              {catalogPdf ? (
                <iframe
                  src={catalogPdf}
                  class="w-full h-full rounded-lg"
                  title="Katalog Jersey Baseball"
                  loading="lazy"
                />
              ) : (
                <div class="text-center p-8">
                  <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  <p class="text-gray-500 mb-4">Katalog PDF akan ditampilkan di sini</p>
                  <p class="text-sm text-gray-400">Letakkan file PDF di: /public/assets/catalog/Katalog-Jersey-Level.pdf</p>
                </div>
              )}
            </div>
          </div>

          <!-- Download Button -->
          <div class="text-center mt-6">
            <a
              href={catalogPdf}
              download="Katalog-Jersey-Level.pdf"
              class="btn btn-outline inline-flex"
            >
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Download Katalog PDF
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Jersey Types -->
    <section class="jersey-types section">
      <div class="container">
        <h2 class="text-2xl font-bold text-center mb-8">Jenis Jersey Baseball</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {jerseyTypes.map((type, index) => (
            <div class="card p-6 text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-3xl">üèÜ</span>
              </div>
              <h3 class="text-xl font-semibold mb-2">{type.name}</h3>
              <p class="text-gray-600">{type.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="features section bg-gray-50">
      <div class="container">
        <h2 class="text-2xl font-bold text-center mb-8">Keunggulan Jersey Baseball Kami</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {features.map(feature => (
            <div class="card p-6 text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                {feature.icon === 'fabric' && (
                  <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                  </svg>
                )}
                {feature.icon === 'design' && (
                  <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
                {feature.icon === 'print' && (
                  <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                  </svg>
                )}
                {feature.icon === 'color' && (
                  <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-accent">
      <div class="container text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Tertarik dengan Jersey Baseball Kami?
        </h2>
        <p class="text-xl text-gray-800 mb-8">
          Konsultasikan kebutuhan jersey baseball custommu sekarang!
        </p>
        <a
          href={whatsappUrl}
          class="btn btn-secondary inline-flex"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Konsultasi WhatsApp
        </a>
      </div>
    </section>
  </div>
</PageLayout>

<style>
  .catalog-embed {
    max-width: 800px;
    margin: 0 auto;
  }

  .catalog-embed iframe {
    min-height: 600px;
    border: none;
  }

  @media (max-width: 768px) {
    .catalog-embed iframe {
      min-height: 400px;
    }
  }
</style>

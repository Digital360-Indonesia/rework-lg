---
/**
 * CTA Section Component - Level Garment Homepage
 *
 * "Yuk Level Up Acara-mu!" section with:
 * - White logo
 * - Animated "Level Up" text with glow effect
 * - Primary color gradient background
 * - Lower height profile
 *
 * @version 1.0.0
 */

// CTA content from WordPress Elementor
const ctaDescription = `Daripada pusing danusan buat cari cuan, mending ajuin proposal eventmu sekarang!
Apapun acaramu buat makin seru dan meriah tanpa khawatir defisit, bersama Level Garment.
Tertarik?`;
const ctaButtonText = "Contact Our Team!";
const whatsappUrl = "https://wa.me/6285183091599";
const logoPath = "/assets/images/logo/logo-white.png"; // White logo
---

<!-- CTA Section - Lower Height, Primary Gradient Background -->
<section
  id="cta-section"
  class="cta-section relative py-12 lg:py-16 overflow-hidden"
>
  <!-- Fluid Gradient Background - Primary Color with Soft Gradient -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary-light to-primary"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-white/10 via-transparent to-white/5"></div>
  </div>

  <!-- Animated gradient overlay -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent animate-shimmer"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      <!-- Logo -->
      <div class="mb-8">
        <img
          src={logoPath}
          alt="Level Garment Logo"
          class="h-12 lg:h-14 mx-auto w-auto"
          width="160"
          height="64"
        />
      </div>

      <!-- Heading with Animated "Level Up" Text -->
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
        Yuk
        <span class="level-up-text">
          <span class="letter" style="animation-delay: 0s">L</span>
          <span class="letter" style="animation-delay: 0.1s">e</span>
          <span class="letter" style="animation-delay: 0.2s">v</span>
          <span class="letter" style="animation-delay: 0.3s">e</span>
          <span class="letter" style="animation-delay: 0.4s">l</span>
          <span class="spacer"></span>
          <span class="letter" style="animation-delay: 0.5s">U</span>
          <span class="letter" style="animation-delay: 0.6s">p</span>
        </span>
        Acara-mu!
      </h2>

      <!-- Description -->
      <p class="text-base sm:text-lg lg:text-xl mb-8 leading-relaxed whitespace-pre-line opacity-90">
        {ctaDescription}
      </p>

      <!-- CTA Button -->
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-10 py-4 bg-white text-primary font-bold text-lg rounded-full shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300"
      >
        {ctaButtonText}
      </a>
    </div>
  </div>
</section>

<style>
  /* Level Up text effect with animated letters */
  .level-up-text {
    display: inline-block;
    position: relative;
    margin: 0 0.3em;
  }

  .level-up-text .letter {
    display: inline-block;
    color: #FFD700;
    text-shadow:
      0 0 10px rgba(255, 215, 0, 0.8),
      0 0 20px rgba(255, 215, 0, 0.6),
      0 0 30px rgba(255, 215, 0, 0.4),
      0 0 40px rgba(255, 140, 0, 0.3);
    animation: letterGrow 1.5s ease-in-out infinite;
    transform-origin: center bottom;
  }

  .level-up-text .spacer {
    display: inline-block;
    width: 0.3em;
  }

  @keyframes letterGrow {
    0%, 100% {
      transform: scale(1);
      text-shadow:
        0 0 10px rgba(255, 215, 0, 0.8),
        0 0 20px rgba(255, 215, 0, 0.6),
        0 0 30px rgba(255, 215, 0, 0.4),
        0 0 40px rgba(255, 140, 0, 0.3);
    }
    50% {
      transform: scale(1.3);
      text-shadow:
        0 0 20px rgba(255, 215, 0, 1),
        0 0 30px rgba(255, 215, 0, 0.8),
        0 0 40px rgba(255, 215, 0, 0.6),
        0 0 50px rgba(255, 140, 0, 0.5),
        0 0 60px rgba(255, 100, 0, 0.4);
    }
  }

  /* Shimmer animation for gradient overlay */
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }

  /* Fade in animations */
  .cta-section img,
  .cta-section h2,
  .cta-section p,
  .cta-section a {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .cta-section img {
    animation-delay: 0.1s;
  }

  .cta-section h2 {
    animation-delay: 0.2s;
  }

  .cta-section p {
    animation-delay: 0.3s;
  }

  .cta-section a {
    animation-delay: 0.4s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<style>
  footer a {
    transition: all 0.3s ease;
  }

  /* Social icon styles */
  .social-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #AF7AD5;
    color: white;
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    transform: scale(1.15) rotate(5deg);
    background-color: #9A66C2;
  }

  .social-icon svg {
    transition: all 0.3s ease;
  }

  .social-icon:hover svg {
    transform: scale(1.1);
  }
</style>

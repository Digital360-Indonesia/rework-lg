---
/**
 * ProductCard Component - Level Garment
 *
 * Individual product image card with WhatsApp CTA
 *
 * Features:
 * - Responsive image with srcset
 * - Lazy loading for performance
 * - WhatsApp CTA button
 * - URL encoded pre-filled message
 * - Hover effects
 *
 * @version 2.0.0
 */

export interface Props {
  image: {
    src: string;
    srcset?: string;
    sizes?: string;
    alt: string;
  };
  whatsappMessage: string;
  category: string;
  subcategory: string;
}

const {
  image,
  whatsappMessage,
  category,
  subcategory,
} = Astro.props;

// WhatsApp base URL
const WHATSAPP_BASE_URL = 'https://wa.me/6285183091599';

// Encode the message for URL
const encodedMessage = encodeURIComponent(whatsappMessage);
const whatsappUrl = `${WHATSAPP_BASE_URL}?text=${encodedMessage}`;
---

<figure class="product-card">
  <div class="product-card-inner">
    <div class="product-card-image">
      <img
        src={image.src}
        srcset={image.srcset}
        sizes={image.sizes || '(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw'}
        alt={image.alt}
        loading="lazy"
        decoding="async"
      />
      <div class="image-overlay"></div>
      <div class="zoom-hint">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
        </svg>
        <span>Click to zoom</span>
      </div>
    </div>
    <div class="product-card-content">
      <span class="product-category">{category}</span>
      <span class="product-subcategory">{subcategory}</span>
    </div>
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="product-card-cta"
      aria-label={`Order ${subcategory} via WhatsApp`}
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
      <span>Pesan</span>
    </a>
  </div>
</figure>

<style>
  /* CSS Custom Properties - Brand Colors */
  :root {
    --primary: #AF7AD5;
    --primary-light: #C494E0;
    --primary-dark: #9A66C2;
    --secondary: #1E3A5F;
    --secondary-light: #2A4A73;
    --secondary-dark: #152E4D;
    --accent: #FFC107;
    --accent-light: #FFD54F;
    --accent-dark: #FFA000;
  }

  .product-card {
    position: relative;
    margin: 0;
    overflow: hidden;
    border-radius: 1rem;
    background: #ffffff;
    box-shadow: 0 2px 12px rgba(30, 58, 95, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 28px rgba(175, 122, 213, 0.25);
  }

  .product-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(175, 122, 213, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .product-card:hover::after {
    opacity: 1;
  }

  .product-card-inner {
    position: relative;
  }

  .product-card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
  }

  .product-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 50%,
      rgba(30, 58, 95, 0.7) 100%
    );
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .product-card:hover .image-overlay {
    opacity: 0.9;
  }

  .zoom-hint {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }

  .product-card:hover .zoom-hint {
    opacity: 1;
  }

  .zoom-hint svg {
    width: 2.5rem;
    height: 2.5rem;
    color: #ffffff;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .zoom-hint span {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    font-family: 'Inter', sans-serif;
  }

  .product-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem 1rem 0.875rem;
    z-index: 1;
  }

  .product-category {
    display: block;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--primary-light);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 0.25rem;
    font-family: 'Inter', sans-serif;
  }

  .product-subcategory {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.3;
    font-family: 'Poppins', sans-serif;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }

  .product-card-cta {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: #25D366;
    color: #ffffff;
    text-decoration: none;
    border-radius: 2rem;
    font-size: 0.8125rem;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
    transition: all 0.3s ease;
    z-index: 2;
    opacity: 0;
    transform: translateY(8px);
  }

  .product-card:hover .product-card-cta {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card-cta svg {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  .product-card-cta:hover {
    background: #20bd5a;
    box-shadow: 0 6px 16px rgba(37, 211, 102, 0.5);
    transform: translateY(-2px);
  }

  /* Mobile Styles - Always show CTA on touch devices */
  @media (max-width: 767px) {
    .product-card {
      border-radius: 0.875rem;
    }

    .product-card-cta {
      opacity: 1;
      transform: translateY(0);
      padding: 0.5625rem 0.875rem;
      font-size: 0.75rem;
      bottom: 0.875rem;
      right: 0.875rem;
    }

    .product-card-content {
      padding: 0.875rem;
    }

    .product-category {
      font-size: 0.6875rem;
    }

    .product-subcategory {
      font-size: 0.875rem;
    }

    .zoom-hint svg {
      width: 2rem;
      height: 2rem;
    }

    .zoom-hint span {
      font-size: 0.75rem;
    }
  }
</style>

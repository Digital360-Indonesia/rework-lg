---
/**
 * CategoryNav Component - Level Garment
 *
 * Product category navigation with visual cards and anchor links
 *
 * Features:
 * - Grid layout (4 columns desktop, 2 tablet, 1 mobile)
 * - Category preview images
 * - Anchor links to category sections
 * - Hover effects on cards
 * - Smooth scroll behavior
 *
 * @version 1.0.0
 */
import productsData from '../../data/products.json';

const { categories } = productsData;
---

<nav class="category-nav" aria-label="Product category navigation">
  <div class="container">
    <h2 class="category-nav-title">Product Line Up</h2>
    <div class="category-grid">
      {categories.map((category) => (
        <a
          href={category.anchor}
          class="category-card"
          aria-label={`View ${category.name} products`}
        >
          <div class="category-card-image">
            <img
              src={category.lineupImage}
              alt={`${category.name} category preview`}
              width="200"
              height="200"
              loading="eager"
            />
          </div>
          <div class="category-card-name">
            {category.name}
          </div>
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  /* Category Navigation Styles */
  .category-nav {
    padding: 3rem 0;
    background-color: #ffffff;
  }

  .category-nav-title {
    font-size: 1.75rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
    color: #1a1a1a;
    font-family: 'Poppins', 'Inter', sans-serif;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    align-items: start;
  }

  /* Category Card */
  .category-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 1rem;
    border-radius: 1rem;
  }

  .category-card:hover {
    transform: translateY(-4px);
    background-color: #f8f9fa;
  }

  .category-card-image {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 1rem;
    overflow: hidden;
    margin-bottom: 0.75rem;
    background-color: #f3f4f6;
  }

  .category-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-card-image img {
    transform: scale(1.05);
  }

  .category-card-name {
    font-size: 1rem;
    font-weight: 600;
    text-align: center;
    color: #1a1a1a;
    font-family: 'Poppins', 'Inter', sans-serif;
  }

  /* Tablet Styles */
  @media (max-width: 1023px) {
    .category-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .category-nav {
      padding: 2rem 0;
    }

    .category-nav-title {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .category-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      const targetElement = document.querySelector(targetId);

      if (targetElement) {
        // Account for fixed header height
        const headerOffset = 80;
        const elementPosition = targetElement.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth',
        });
      }
    });
  });
</script>

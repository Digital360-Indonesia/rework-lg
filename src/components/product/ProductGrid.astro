---
/**
 * ProductGrid Component - Level Garment
 *
 * Renders a category section with all its subcategories and products
 *
 * Features:
 * - Category heading with anchor ID
 * - Subcategory sections with descriptions
 * - Responsive grid for product cards
 * - Multiple images per subcategory
 *
 * @version 2.0.0
 */

import ProductCard from './ProductCard.astro';

export interface Props {
  category: {
    id: string;
    name: string;
    anchor: string;
    subcategories: Array<{
      id: string;
      name: string;
      description: string;
      whatsappMessage: string;
      images: Array<{
        src: string;
        srcset?: string;
        sizes?: string;
        alt: string;
      }>;
    }>;
  };
  index?: number;
}

const { category, index = 0 } = Astro.props;

// Alternate background for even categories
const isEven = index % 2 === 0;
---

<section id={category.id.replace('#', '')} class="category-section" class:even={isEven}>
  <div class="container">
    <div class="category-header">
      <span class="category-badge">Kategori</span>
      <h2 class="category-title">{category.name}</h2>
      <div class="category-divider">
        <span class="divider-line"></span>
        <span class="divider-dot"></span>
        <span class="divider-line"></span>
      </div>
    </div>

    {
      category.subcategories.map((subcategory) => (
        <div class="subcategory-section">
          <div class="subcategory-header">
            <h3 class="subcategory-title">
              <span class="title-icon">âœ¦</span>
              {subcategory.name}
            </h3>
            <p class="subcategory-description">
              {subcategory.description}
            </p>
          </div>

          <div class={`products-grid products-grid-${subcategory.images.length}`}>
            {
              subcategory.images.map((image) => (
                <ProductCard
                  image={image}
                  whatsappMessage={subcategory.whatsappMessage}
                  category={category.name}
                  subcategory={subcategory.name}
                />
              ))
            }
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* CSS Custom Properties - Brand Colors */
  :root {
    --primary: #AF7AD5;
    --primary-light: #C494E0;
    --primary-dark: #9A66C2;
    --secondary: #1E3A5F;
    --secondary-light: #2A4A73;
    --secondary-dark: #152E4D;
    --accent: #FFC107;
    --accent-light: #FFD54F;
    --accent-dark: #FFA000;
  }

  .category-section {
    padding: 5rem 0;
    scroll-margin-top: 100px;
    background: #ffffff;
    transition: background 0.3s ease;
  }

  .category-section.even {
    background: linear-gradient(180deg, #f8f9fc 0%, #ffffff 100%);
  }

  .category-header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .category-badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: linear-gradient(135deg, rgba(175, 122, 213, 0.15) 0%, rgba(175, 122, 213, 0.08) 100%);
    border: 1px solid rgba(175, 122, 213, 0.2);
    border-radius: 2rem;
    color: var(--primary-dark);
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .category-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--secondary);
    text-align: center;
    font-family: 'Poppins', sans-serif;
    letter-spacing: -0.02em;
  }

  .category-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .divider-line {
    width: 3rem;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--primary));
  }

  .divider-dot {
    width: 8px;
    height: 8px;
    background: var(--primary);
    border-radius: 50%;
  }

  .subcategory-section {
    margin-bottom: 3.5rem;
  }

  .subcategory-section:last-child {
    margin-bottom: 0;
  }

  .subcategory-header {
    margin-bottom: 2rem;
    padding-left: 1rem;
    border-left: 3px solid var(--primary);
  }

  .subcategory-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--secondary);
    font-family: 'Poppins', sans-serif;
  }

  .title-icon {
    color: var(--primary);
    font-size: 1rem;
  }

  .subcategory-description {
    font-size: 1rem;
    line-height: 1.8;
    color: #6b7280;
    margin-bottom: 0;
    max-width: 52rem;
    font-family: 'Inter', sans-serif;
  }

  /* Products Grid */
  .products-grid {
    display: grid;
    gap: 1.75rem;
  }

  /* Dynamic grid columns based on number of images */
  .products-grid-1 {
    grid-template-columns: 1fr;
  }

  .products-grid-1 .product-card {
    max-width: 48rem;
    margin: 0 auto;
  }

  .products-grid-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .products-grid-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  /* Tablet Styles */
  @media (max-width: 1023px) {
    .category-section {
      padding: 3.5rem 0;
    }

    .category-title {
      font-size: 2rem;
    }

    .subcategory-title {
      font-size: 1.25rem;
    }

    .subcategory-description {
      font-size: 0.9375rem;
    }

    .products-grid-2,
    .products-grid-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .category-section {
      padding: 2.5rem 0;
      scroll-margin-top: 70px;
    }

    .category-header {
      margin-bottom: 2.5rem;
    }

    .category-badge {
      font-size: 0.75rem;
      padding: 0.3125rem 0.875rem;
    }

    .category-title {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    .divider-line {
      width: 2rem;
    }

    .subcategory-section {
      margin-bottom: 2.5rem;
    }

    .subcategory-header {
      padding-left: 0;
      border-left: none;
      border-top: 2px solid var(--primary);
      padding-top: 1rem;
    }

    .subcategory-title {
      font-size: 1.125rem;
    }

    .subcategory-description {
      font-size: 0.875rem;
      line-height: 1.7;
    }

    .products-grid-1,
    .products-grid-2,
    .products-grid-3 {
      grid-template-columns: 1fr;
    }

    .products-grid-1 .product-card {
      max-width: 100%;
    }
  }
</style>
